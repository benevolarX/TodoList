{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
        "checkJs": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"jsxFactory": "h",
		"lib": [
			"dom",
			"es2018",
			"es6",
			"es7",
			"esnext"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"paths": {
			"~*": ["./src/*"]
		},
        "pretty": true,
        "removeComments": true,
		"strict": true,
		"target": "esnext",
		"typeRoots" : ["./node_modules/@types"]
	},
	"include": [
		"src/**/*"
	],
	"parcelTsPluginOptions": {
		"transpileOnly": false
    }
}